.hero {
   padding-bottom: 100px; /* отступ снизу */
}
.hero--info { /* текстовая часть */
   width: 530px;
   padding-top: 70px;
}
.hero--info h1 {
    font-weight: 600;
    font-size: 25px;
    color: #4d0303;
}
.hero--info p {
    margin: 30px 0 40px 0;
    font-size: 16px;
    line-height: 17px;
    color: #4d0303;
}
.hero--info .btnn {
    background: #a70101;
    color: #fff;
    border: none;
    padding: 12px 24px;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    transition: background 300ms ease;
}