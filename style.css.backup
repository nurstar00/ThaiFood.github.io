body {
    margin: 0%; /* убираем отступы по умолчанию */
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
    font-size: 16px;
    color: #000000;
}



.wrapper {   Q
    background: #D6C638;
    background: linear-gradient(180deg, rgba(214, 198, 56, 0.53) 29%, rgba(255, 211, 51, 0.12) 60%, rgba(119, 233, 140, 0.56) 97%);
    width: 100%;
}
.container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 15px;
}
header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 40px 0;
}
header .logo {
    font-family: 'Poppins', sans-serif;
    font-weight: 700;
    font-size: 24px;
    line-height: 36px;
    color: #a70101;
}
header nav  {
    float: right;
    width: 50%; /* навигация занимает 50% ширины  */
}  display: inline-block;

header nav ul li a {
    color: #685423;
}

header nav ul li:not(.active):not(.btn) a:hover {
    border-bottom: 3px solid #a7010193;
} /* мышка апарган кезде под текст линия */


header nav ul li.btn a { /* кноpka regis */
    background: hsla(71, 40%, 66%, 0.627);
    padding: 7px 11px; 
    border-radius: 5px;
    transition: all 500ms ease; /* анимация плавно*/
}
header nav ul li.btn a:hover {/* кноpka regis мышка апарган кезде */
    background: #ebeeb4;
header nav ul {
    display: flex;
    justify-content: space-between;
    list-style: none;
}

